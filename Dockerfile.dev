FROM golang:1.18-alpine

RUN apk add --no-cache --update curl \
    bash \
    grep \
    sed \
    jq \
    ca-certificates \
    openssl \
    git \
	make \
	gcc \
	musl-dev

WORKDIR /app

COPY go.* .
RUN go mod tidy

COPY . .

RUN make deps

EXPOSE 9000
EXPOSE 3000

CMD ["gin","--appPort", "9000", "--port", "3000", "--immediate", "run", "server"]
